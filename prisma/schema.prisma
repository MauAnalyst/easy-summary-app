generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id           String     @id @default(uuid())
  refreshToken String     @unique
  name         String
  email        String     @unique
  password     String
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  summarys     Summarys[]

  @@map("users")
}

model Summarys {
  id        String      @id @default(uuid())
  subject   String
  textarea  String
  questions Questions[]
  userID    String
  user      User        @relation(fields: [userID], references: [id])

  @@map("summarys")
}

model Questions {
  id              String   @id @default(uuid())
  question        String
  alternatives    String[]
  alternativeTrue String
  summaryID       String
  summary         Summarys @relation(fields: [summaryID], references: [id])

  @@map("questions")
}
